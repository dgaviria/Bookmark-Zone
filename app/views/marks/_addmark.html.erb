<p>
	<h2>
		Add more marks
	</h2>
	
	<%= form_for @mark do |f| %>
	
	<%= render 'shared/error_messages', :object => f.object %>
	
	
	  <div class="field">
		<%= f.label :page %><br />
		<%= f.text_field :page %>
	  </div>

	  <div class="field">
	    <%= f.label :note %><br />
	    <%= f.text_area :note, :cols => "1", :rows => "1" %>
	  </div>
	
	  <div class="field">
	    <%= f.label :image %><br />
	    <%= f.file_field :image %>
	  </div>

	  <div class="actions">
		<%= f.hidden_field:book_id, :value => @book.id %>
	    <%= f.submit "Add mark" %>
	  </div>

	<% end %>
</p>
